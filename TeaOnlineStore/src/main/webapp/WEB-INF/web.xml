    <param-value>tea_pleasure_user_id</param-value>
  </context-param>
  <context-param>
    <param-name>imagePath</param-name>
    <param-value>/home/andrew/From Windows/TeaOnlineStore/Images/</param-value>
  </context-param>
  <context-param>
    <param-name>numberOfProductsOnPage</param-name>
    <param-value>15</param-value>
