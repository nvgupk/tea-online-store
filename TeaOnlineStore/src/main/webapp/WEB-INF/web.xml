<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <filter>
    <display-name>AuthenticationFilter</display-name>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>LogRegFilter</display-name>
    <filter-name>LogRegFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.LogRegFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LogRegFilter</filter-name>
    <url-pattern>/login.jsp</url-pattern>
    <url-pattern>/registration.jsp</url-pattern>
    <url-pattern>/Registration</url-pattern>
    <url-pattern>/Login</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>HeaderFilter</display-name>
    <filter-name>HeaderFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.HeaderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HeaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter>
    <display-name>OrderFilter</display-name>
    <filter-name>OrderFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.OrderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>OrderFilter</filter-name>
    <url-pattern>/Order</url-pattern>
    <url-pattern>/order.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>ProductInfoFilter</display-name>
    <filter-name>ProductInfoFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.ProductInfoFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ProductInfoFilter</filter-name>
    <url-pattern>/productinfo.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>PersonalFilter</display-name>
    <filter-name>PersonalFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.PersonalFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PersonalFilter</filter-name>
    <url-pattern>/Personal</url-pattern>
    <url-pattern>/personal.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>ProductFilter</display-name>
    <filter-name>ProductFilter</filter-name>
    <filter-class>com.teaonlinestore.web.filter.ProductFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ProductFilter</filter-name>
    <url-pattern>/product.jsp</url-pattern>
